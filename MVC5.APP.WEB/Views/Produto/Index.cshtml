@model List<MVC5.APP.APPLICATION.Produtos.DTO.ProdutoResponse>
@{
    ViewBag.Title = "Produtos";
}

<h2>Index</h2>

<div class="row">

    <div class="col-10"> Registro de um novo Produto </div>
    <div class="col-2">
        @Html.ActionLink("Register New", "Cadastro", "Produto", new { area = "" }, new { @class = "nav-link btn btn-info" })
    </div>

    <table class="table">
        <thead>
            <tr>
                <th>SKU</th>
                <th>Descrição</th>
                <th>Fabricante</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var produto in Model)
            {
                <tr>
                    <td>@produto.SKU</td>
                    <td>@produto.Descricao</td>
                    <td>@produto.Fabricante</td>
                </tr>
            }
        </tbody>
    </table>

</div>


